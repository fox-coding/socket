        <h3>Or create an account</h3>
        <form id="register_form">
            <input id="sgn_email" type="email" placeholder="Email">
            <input id="sgn_pass" type="password" placeholder="Password">
            <button>register</button>
        </form>
        <div class="error"></div>
    </div>
</div>

